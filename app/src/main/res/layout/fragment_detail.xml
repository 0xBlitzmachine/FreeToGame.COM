<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.DetailFragment">

    <ImageView
        android:id="@+id/detailThumbnailImageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gradientDetailmageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/detailThumbnailImageView"
        app:layout_constraintEnd_toEndOf="@+id/detailThumbnailImageView"
        app:layout_constraintStart_toStartOf="@+id/detailThumbnailImageView"
        app:layout_constraintTop_toTopOf="@+id/detailThumbnailImageView"
        app:srcCompat="@drawable/background_shadow_gradient_2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/backgroundTitleCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailThumbnailImageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/detailGameTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:shadowColor="@color/white"
        android:shadowRadius="5"
        android:text="Game Title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/detailThumbnailImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailThumbnailImageView" />

    <com.google.android.material.chip.Chip
        android:id="@+id/genreDetailChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:backgroundTint="@color/grey_dark"
        app:layout_constraintStart_toEndOf="@+id/detailGameTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/detailGameTitleTextView"
        tools:text="MMOARPG" />

    <com.google.android.material.chip.Chip
        android:id="@+id/platformDetailChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:backgroundTint="@color/grey_dark"
        app:layout_constraintEnd_toStartOf="@+id/detailGameTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/detailGameTitleTextView"
        tools:text="Platform" />

    <TextView
        android:id="@+id/genreDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:shadowColor="@color/dark"
        android:shadowRadius="5"
        android:text="Genre"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/genreDetailChip"
        app:layout_constraintEnd_toEndOf="@+id/genreDetailChip"
        app:layout_constraintStart_toStartOf="@+id/genreDetailChip" />

    <TextView
        android:id="@+id/platformDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:shadowColor="@color/dark"
        android:shadowRadius="5"
        android:text="Platform"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/platformDetailChip"
        app:layout_constraintEnd_toEndOf="@+id/platformDetailChip"
        app:layout_constraintStart_toStartOf="@+id/platformDetailChip" />
</androidx.constraintlayout.widget.ConstraintLayout>