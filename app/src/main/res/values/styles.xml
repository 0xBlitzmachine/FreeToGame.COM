<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- May use this as base style for other components and expend rest within the component?
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>
    -->

    <!-- Example of modifying views default set style
    <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    -->

    <style name="DetailsFragmentPlaceholderTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="alpha">0.6</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">#53575C</item>
        <item name="android:alpha">0.75</item>
    </style>

    <style name="CustomBottomNavMenuStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="itemIconTint">@color/bottom_menu_colorstate</item>
        <item name="itemTextColor">@color/bottom_menu_colorstate</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemActiveIndicatorStyle">@style/CustomBottomNavMenuActiveItemIndicator</item>
    </style>

    <style name="CustomBottomNavMenuActiveItemIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Input.Icon">
        <item name="chipStrokeColor">@color/grey</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@color/white</item>

        <item name="closeIconVisible">false</item>

        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="android:selectable">false</item>
        <item name="checkedIconEnabled">false</item>
    </style>

</resources>